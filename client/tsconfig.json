{
	"compilerOptions": {
		"target": "es2016",
		"jsx": "react",

		"module": "esnext",
		"moduleResolution": "node",
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"],
			"ui": ["../packages/ui/src"]
		},
		"types": ["vite/client"],
		"outDir": "./dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true
	},
	"include": ["src/**/*.ts", "public/**/*.ts", "src/**/*.tsx"]
}
